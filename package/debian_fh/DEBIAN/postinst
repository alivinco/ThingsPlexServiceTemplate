#!/bin/bash

set -e

# summary of how this script can be called:
#		* <postinst> `configure' <most-recently-configured-version>
#		* <old-postinst> `abort-upgrade' <new version>
#		* <conflictor's-postinst> `abort-remove' `in-favour' <package>
#		  <new-version>
#		* <postinst> `abort-remove'
#		* <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#		  <failed-install-package> <version> `removing'
#		  <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

add_user_and_group()
{
	if ! getent group futurehome >/dev/null
	then
		echo -n "Adding group futurehome.."
		addgroup --quiet \
			--system \
			futurehome 2>/dev/null || true
		echo "..done"
	fi

	if ! getent passwd futurehome_service_template >/dev/null
	then
		echo -n "Adding user thingsplex_service_template.."
		adduser --quiet \
			--system \
			--ingroup futurehome \
			--no-create-home \
			--disabled-password \
			thingsplex_service_template 2>/dev/null || true
		echo "..done"
	fi

}

set_ownership()
{
	chown -R thingsplex_service_template:futurehome "/var/lib/futurehome/thingsplex_service_template"
}


case "$1" in
	configure)
	    echo "Configuring.."
		add_user_and_group
		set_ownership

        if [ ! -d /var/log/futurehome/thingsplex_service_template ]
        then
            echo "Setting up logging dir"
            mkdir -m 774 -p /var/log/futurehome/thingsplex_service_template
            chown thingsplex_service_template:futurehome /var/log/futurehome/thingsplex_service_template
        fi
		# Start thingsplex
		if [ -f /usr/bin/thingsplex_service_template ]
		then
		    systemctl enable thingsplex_service_template.service
			systemctl start thingsplex_service_template.service
		fi
	;;

	abort-upgrade|abort-remove|abort-deconfigure)
	;;

	*)
		echo "postinst called with unknown argument \`$1'" >&2
		exit 1
	;;
esac



# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0